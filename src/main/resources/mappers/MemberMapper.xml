<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
                  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.study.sample.mapper.MemberMapper">

   <insert id="memberInsert">
      INSERT INTO memberTBL (m_id, m_pw, m_address) VALUES(#{m_id}, #{m_pw}, #{m_address})
   </insert>
   
   <select id="memberSelectAll" resultType="org.study.sample.model.MemberDTO">
		SELECT * FROM memberTBL;
	</select>

   <insert id="memberDelete">
		DELETE FROM memberTBL WHERE m_no = #{psdfsdfsdfp};
   </insert>
   
   <select id="memberSelect" resultType="org.study.sample.model.MemberDTO">
		SELECT * FROM memberTBL where m_no = #{ppp};
   </select>
   
   <select id="memberUpdate">
   		UPDATE memberTBL SET m_pw='#{m_pw}', m_address='#{m_address}' WHERE m_no='#{m_no}';
   </select>
	
   <select id="login" resultType="org.study.sample.model.MemberDTO">
		SELECT * FROM memberTBL where m_id = #{m_id};
   </select>
   <select id="getRealPassword" resultType="String">
		SELECT m_pw FROM memberTBL where m_id = #{m_id};
   </select>
</mapper>